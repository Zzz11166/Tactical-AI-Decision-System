<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.airag.auth.mapper.UserMapper">
    <resultMap id="UserResultMap" type="com.spring.airag.auth.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password_hash"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="role" column="role"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectById" parameterType="int" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="UserResultMap">
        SELECT * FROM users ORDER BY id
    </select>

    <select id="selectByUsername" parameterType="string" resultMap="UserResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.spring.airag.auth.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password_hash, email, phone, role, status, created_at, updated_at)
        VALUES (#{username}, #{password}, #{email}, #{phone}, #{role}, #{status}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="com.spring.airag.auth.entity.User">
        UPDATE users
        SET username = #{username},
            password_hash = #{password},
            email = #{email},
            phone = #{phone},
            role = #{role},
            status = #{status},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <select id="existsByUsername" parameterType="string" resultType="int">
        SELECT COUNT(*) FROM users WHERE username = #{username}
    </select>
</mapper>